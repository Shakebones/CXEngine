Texture2D shaderTexture;
SamplerState sampleState;

 cbuffer TransparencyBuffer
 {
	float transparency;
 };

 struct PS_INPUT
 {
	float4 position : SV_POSITION;
	float2 tex		: TEXCOORD0;
 };

 float4 TexTransPS(PS_INPUT input) : SV_TARGET
 {
	float4 outputColor;

	outputColor = shaderTexture.Sample(sampleState, input.tex);

	outputColor.w = transparency;

	return outputColor;
 }